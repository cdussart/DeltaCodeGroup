@model IEnumerable<ClassLibraryDelta.Entities.Command>

@{
  
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css">
    <title>Index</title>
</head>
<body>
    <p class="text-center">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col"> @Html.DisplayNameFor(model => model.DateCommand)</th>
                <th scope="col">Seller</th>
                <th scope="col">Client</th>
            </tr>
        </thead>
        <!--<tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCommand)
            </th>
            <th>
                Seller
            </th>
            <th>
                Client
            </th>
            <th></th>
        </tr>-->

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCommand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CommandID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CommandID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CommandID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
