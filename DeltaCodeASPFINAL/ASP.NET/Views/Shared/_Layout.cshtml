<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DELTACODE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding:0px">
    <div class="container-fluid" style="background-color: #558c2f; height:100px; width:auto">
        <div class="row">
            <div class="col-md-2" style="text-align:left">
                <img src="~/Content/Image/delta.png" style="width: 130px;height: 90px; margin-left: -7px; padding-top: 5px">
            </div>
            <div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:#000;">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Stock", "Index", "Products")</li>
                    <li>@Html.ActionLink("Commandes", "Index", "Commands")</li>
                    <li>@Html.ActionLink("Demandes d'achat", "Index", "PurchaseRequests")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Sellers")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer style="background-color: #558c2f; height:100px; width:100%">
        <div class="row">
            <div class="col-md-6" style="text-align:right">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
            <div class="col-md-6" style="text-align:right">
               
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
