            <ColumnDefinition MaxWidth="200" Width="53*"/>
        </Grid.ColumnDefinitions>
        <!-- Contenu Ici -->

        <TextBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" Height="32"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,58,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Height="32" RenderTransformOrigin="0.699,0.461"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,17,0,0" Grid.Row="1" Text="LOGIN" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.499,-1.034" Height="19" Width="40"/>
